# Example aliases
# alias zshconfig="mate ~/.zshrc"
# alias ohmyzsh="mate ~/.oh-my-zsh"
# For quick edits
alias nzsh="$EDITOR ~/.config/zsh/.zshrc"
alias nsway="$EDITOR ~/.config/sway/config"
alias nalias="$EDITOR ~/.config/zsh/aliasrc"

# Fabric Command
alias fb='if [ -t 1 ]; then docker run --rm -i -v ~/.config/fabric/:/root/.config/fabric/ fabric_con:latest fabric; else docker run --rm -t -v ~/.config/fabric/:/root/.config/fabric/ fabric_con:latest fabric; fi'

# Some useful utilitie
alias v="$EDITOR"
alias emacs="emacsclient -c -a 'emacs'"
alias ll="ls -Alh"
alias ls='ls --color=always'
alias cat='bat'
alias rm="trash -v"
alias p="sudo pacman"
alias lf="lfcd"
alias mv='mv -i'
# To apt to nala
apt() { 
  command nala "$@"
}
sudo() {
  if [ "$1" = "apt" ]; then
    shift
    command sudo nala "$@"
  else
    command sudo "$@"
  fi
}
