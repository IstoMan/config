# Example aliases
# alias zshconfig="mate ~/.zshrc"
# alias ohmyzsh="mate ~/.oh-my-zsh"

# For quick edits
alias nzsh="$EDITOR ~/.config/zsh/.zshrc"
alias nsway="$EDITOR ~/.config/sway/config"
alias nhypr="$EDITOR ~/.config/hypr/hyprland.conf"
alias nalias="$EDITOR ~/.config/zsh/aliasrc"

# Some useful utilitie
alias v="$EDITOR"
alias emacs="emacsclient -c -a 'emacs'"
alias ll="eza -alH --icons"
alias ls="eza --icons"
alias lt="eza -T"
alias rm="trash"
alias mv='mv -i'

# To apt to nala
apt() { 
  command nala "$@"
}
sudo() {
  if [ "$1" = "apt" ]; then
    shift
    command sudo nala "$@"
  else
    command sudo "$@"
  fi
}
